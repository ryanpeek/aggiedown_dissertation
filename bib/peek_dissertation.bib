@article{kupferberg_water_2011,
  title = {Water {{Velocity Tolerance}} in {{Tadpoles}} of the {{Foothill Yellow}}-Legged {{Frog}} ({{Rana}} Boylii): {{Swimming Performance}}, {{Growth}}, and {{Survival}}},
